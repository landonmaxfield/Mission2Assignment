@{
    ViewData["Title"] = "Grades";
}

@model GradesModel;
<h2>Grade Calculator:</h2>
<form method="post">
    <label>Assignments(55%):</label>
    <input id="txtAssignment" asp-for="assignment" /> <br />
    <label>Group Project(5%):</label>
    <input id="txtproject" asp-for="project"/> <br />
    <label>Quizzes(10%):</label>
    <input id="txtquizzes" asp-for="quiz"/><br />
    <label>Exams(20%)</label>
    <input id="txtexams" asp-for="exam" /><br />
    <label>INTEX(10%)</label>
    <input id="txtintex" asp-for="intex"/><br />
    <input id="btnsend" type="submit" value="Submit" />

    <div asp-validation-summary="All"></div>
</form>


